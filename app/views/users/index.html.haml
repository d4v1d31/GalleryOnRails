.row
  .large-12.columns.large-centered
    .small-2.columns.panel

      = render "shared/side_nav"

    .small-10.columns
      %h2
        Nutzer Übersicht
      .alert-box.secondary
        Hier können alle Nutzer des Systems verwaltet werden.
      %table
        %thead
          %tr
            %th{width: "120px"}
              User Mail Adress
            %th{width: "250px"}
              Permissions
            %th 
              Created at
            %th 
              Last Update
            %th
              Actions
        %tbody
          - @user.each do |user|
            %tr
              %td
                = user.email
              %td
                -user.permissions.each do |permission|
                  %span.label.radius
                    =permission.name
              %td
                = user.created_at
              %td
                = user.updated_at
              %td
                %a{href: "#"}
                  Edit
                %a{href: "#"}
                  Destroy